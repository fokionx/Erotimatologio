    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Αποτέλεσμα"
        android:textSize="18sp"
        android:padding="4dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/result"/>
-->
</LinearLayout>
